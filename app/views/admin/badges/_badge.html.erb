<tr>
  <td class='align-middle'><%= badge.title %></td>
  <td class='align-middle'><img src="<%= badge.badge_image %>"></td>
  <td class='align-middle'><%= badge.rule %></td>
  <td class='align-middle'><%= badge.parameter %></td>
  <td class='align-middle'><%= link_to t('links.show'), admin_badge_path(badge) %></td>
  <td class='align-middle'><%= link_to t('links.edit'), edit_admin_badge_path(badge) %></td>
  <td class='align-middle'><%= link_to t('links.delete'), admin_badge_path(badge),
                                             method: :delete,
                                             data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
