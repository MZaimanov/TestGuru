<div class="row justify-content-center">
  <div class="col-12 col-md-8 tests-table">
    <h1> <%= t('.header') %></h1>

    <p>
      <%= link_to t('links.gists'), admin_gists_path, class: 'btn btn-primary' %>
    </p>

    <p>
      <%= link_to t('links.new_test'), new_admin_test_path, class: 'btn btn-primary' %>
    </p>

    <table class="table">
      <thead class="thead-inverse">
        <tr>
          <th><%= t('.title') %></th>
          <th><%= t('.level') %></th>
          <th><%= t('.category') %></th>
          <th><%= t('.questions') %></th>
          <th colspan="3"><%= t('.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @tests %>
      </tbody>
    </table>
  </div>
</div>
