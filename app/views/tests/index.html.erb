<h1>Available Tests</h1>

<%= link_to 'Новый тест', new_test_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th colspan="3"></th>
  </tr>

  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= link_to 'Прсмотр', test_path(test) %></td>
      <td><%= link_to 'Редактирование', edit_test_path(test) %></td>
      <td><%= link_to 'Удаление', test_path(test), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
</table>
